@page "/clients"
@inject BlazorApp1.Repository.IRepository repository

<PageTitle>List of clients</PageTitle>

<h3>List of clients</h3>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Create Data</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <GenericList ListOfItems="clients">
                <ItemTemplate Context="client">
                    <IndividualClient Client="client" IsTable="true" />
                </ItemTemplate>
            </GenericList>
        </tbody>
    </table>
</div>

@code {
    List<Client> clients;

    protected async override Task OnInitializedAsync()
    {
        clients = repository.GetAllClients();
    }
}

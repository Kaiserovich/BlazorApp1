<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Realise Date</th>
                <th><input type="checkbox" @onchange="(() => displayButtons = !displayButtons)"/></th>
            </tr>
        </thead>
        <tbody>
            @if(Games == null)
            {
                <tr>Loading data...</tr>
            }
            else if (Games.Count == 0)
            {
                <tr>No items in array</tr>
            }
            else
            {
                @foreach (var item in Games)
                {
                    <IndividualGame Game="item" IsTable="true" DisplayButtons="displayButtons"/>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<Game> Games { get; set; }
    bool displayButtons = false;
}

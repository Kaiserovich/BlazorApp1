@page "/orders/{OrderId:int}"
@inject IRepositoryWrapper db

@if (order is not null)
{
    <PageTitle>Order #@order.Id</PageTitle>
    <h3>
        Order page
    </h3>

    <div class="row">
        <div class="col">
            <EditOrder Order="order"/>
        </div>

        <div class="col">
            <h4>Client of the selected order</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Client ID</th>
                            <th>Name</th>
                            <th>Create Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <RowClient Client="associatedClient" IsWithButtons=false />
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <Loading />
}

@code {
    [Parameter] public int OrderId { get; set; }

    Order order;
    Client associatedClient;

    protected async override Task OnInitializedAsync()
    {
        order =  await db.Order.GetOrderByIdAsync(OrderId);
        if (order is not null)
            associatedClient = await db.Client.GetClientByIdAsync(order.ClientId);

    }

}
